{
  "author": "Igor Soarez <igorsoarez@gmail.com>",
  "name": "express-ejs-layouts",
  "description": "Layout support for ejs in express.",
  "keywords": [
    "express",
    "layout",
    "ejs"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "version": "2.5.1",
  "devDependencies": {
    "@types/express": "*",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22",
    "@types/supertest": "^6.0.3",
    "ejs": "^3.1.7",
    "express": "*",
    "mocha": "^11.7.5",
    "should": "^13.2.3",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "tsup lib/index.ts --format cjs,esm --dts --minify --tsconfig tsconfig.build.json && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "test": "tsx node_modules/mocha/bin/mocha.js 'test/**/*.{ts,js}' --exit",
    "prepublishOnly": "npm run test && npm run build"
  },
  "repository": "git://github.com/kaiofelps/nest-express-ejs-layouts.git"
}
